#myModal.modal.hide.fade
  .modal-header
    button.close*{"data-dismiss" => "modal"} Ã—
    h3 Register for SMS Text
  .modal-body
    #subscribe-alerts
    = form_for @subscribe do |f|
      .field
        = f.label :name
        = f.text_field :name
      .field
        = f.label :phone
        = f.text_field :phone, :placeholder => "4235121771"
      .actions = f.submit 'Subscribe'
  .modal-footer
    a.btn.btn-danger*{"data-dismiss" => "modal"} Close

